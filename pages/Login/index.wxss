page{ height: 100%; } 
.container { 
    height: 100%; display: flex; flex-direction: column; 
    padding: 0; box-sizing: border-box; background-color: #f2f2f2 
} 
   /*登录图片*/ 
.login-icon{ 
    flex: none; margin-bottom: 100px;
} 
.login-img{ 
    width: 750rpx; 
} 
   /*表单内容*/ 
.login-from { 
    margin-top: 50px; flex: auto;  height:100%; 
} 
.inputView { 
    background-color: #fff; line-height: 44px; 
} 
   /*输入框*/ 
.nameImage, .keyImage { 
    margin-left: 22px; width: 14px; height: 14px 
} 
.loginLab { 
    margin: 15px 15px 15px 10px; color: #545454; font-size: 14px 
} 
.inputText { 
    flex: block; float: right; text-align: right; 
    margin-right: 22px; margin-top: 11px; color: #cccccc; 
    font-size: 14px 
} 
